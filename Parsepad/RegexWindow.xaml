<Window x:Class="Parsepad.RegexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Regex" Height="147" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="Parsepad.ico">
    <StackPanel>
        <Label Content="Name:" Height="28" Margin="3,0,0,0"/>
        <TextBox Height="23" x:Name="name" Margin="6,0,6,0" TextChanged="name_TextChanged" />
		<CheckBox x:Name="saveFormat" Margin="6">Save Format with Regex</CheckBox>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="save" IsEnabled="False" Width="46" Height="26" Margin="0,0,6,6" Click="save_Click">Save</Button>
            <Button x:Name="cancel" Width="46" Height="26" Margin="0,0,6,6" Click="cancel_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
